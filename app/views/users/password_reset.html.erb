<div id="simple-container">
  <%if flash[:error]%>
    <div class='alert alert-error'>
      <%=flash[:error]%>
    </div>
  <%end%>
  <% if @user.present? and @user.errors.any? %>
    <div class='alert alert-error'>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </div>
  <% end %>

  <%if flash[:success]%>
    <p>
      <%= flash[:success] %>
      <%- if @requires_approval %>
        <%= t 'login.not_approved' %>
      <% else %>
        <%= link_to( t('password_reset.continue', site_name: SiteSetting.title), root_path ) %>
      <% end %>
    </p>
  <% else %>
    <%if @user.present? %>
      <h3><%= t 'password_reset.choose_new' %></h3>

      <%=form_tag({}, method: :put) do %>
        <p>
        <input id="user_password" name="password" size="30" type="password">
        </p>
        <p>
        <%=submit_tag(t('password_reset.update'), class: 'btn')%>
        </p>
      <%end%>
    <%end%>
  <%end%>
</div>

<script type="text/javascript">
  document.getElementById('user_password').focus()
</script>
