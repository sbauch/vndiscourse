<div id='list-controls' class='list-controls'>
  <div class="container">
    <ul class="nav nav-pills" id='category-filter'>
      {{#each controller.availableNavItems}}
        <li>{{view Discourse.NavItemView contentBinding="this"}}</li>
      {{/each}}
  </ul>
  
  <section class="category-column first">
    {{view Discourse.TextField valueBinding="controller.username"  styleKey='width:300px;' placeholder="Search for a Vayniac by name, position, or team..."}}
  </section>

{{#if content}}  

  <section class="category-column first">
      {{#each contentOdd}}

  <table id='topic-list' class='dir' style='margin-bottom:12px;'>
    <tr>
      <th>
        <a href="/users/{{unbound username}}">
          {{avatar this imageSize="small"}} 
          {{unbound name}}
        </a>
      </th>
    </tr>
    <tr>
      <td class='main-link'> <a href="mailto:{{unbound email}}">{{unbound email}}</a></td>
   </tr>
   <tr>
     <td class='main-link'>{{unbound position}}</td>
   </tr> 
   <tr>
     <td class='main-link'>{{unbound teams}}</td>
   </tr>  
 </table>
  {{/each}}
</section>

  <section class="category-column">
    {{#each contentEven}}

  <table id='topic-list' class='dir' style='margin-bottom:12px;'>
    <tr>
      <th>
        <a href="/users/{{unbound username_lower}}">
          {{avatar this imageSize="small"}}
          {{unbound name}} 
        </a>
      </th>
    </tr>
    <tr>
      <td class='main-link'> <a href="mailto:{{unbound email}}">{{unbound email}}</a></td>
   </tr>
   <tr>
     <td class='main-link'>{{unbound position}}</td>
   </tr>  
   <tr>
     <td class='main-link'>{{unbound teams}}</td>
   </tr>  
 </table>
 
  {{/each}}
</section>  
{{else}}
  {{#if content.loaded}}
    <div class='clearfix'></div>
    <h3>Nobody matches your search :(</h3>  
  {{else}}
    <div class='clearfix'></div>
    <div class='spinner'>{{i18n loading}}</div>
  {{/if}}
{{/if}}